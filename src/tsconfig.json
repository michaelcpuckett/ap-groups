{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": [
      "ESNext"
    ],
    "outDir": "../lib"
  },
  "exclude": [
    "../node_modules"
  ],
  "include": [
    "index.ts"
  ]
}